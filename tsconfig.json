{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitOverride": true,
    "sourceMap": true,
    "outDir": "dist",
    "target": "ES2022",
    "module": "commonjs",
    "skipLibCheck": true,
    "moduleResolution": "Node"
  },
  "include": ["src/**/*", "src/types/*.d.ts"]
}
